{%if settings.ar_home_about_show%}
<section class="panel panel-about">
	<div class="inner">
		<div class="list">
			<div class="item">
				<a class="link" href="/about-us">
					<h3>{{settings.ar_home_about_title}}</h3>
					<span class="icn icn-arrow-green">&nbsp;</span>
				</a>
				{{settings.ar_home_about_buttonnoidung}}

				<a href="{{settings.ar_home_about_link}}" class="btn btn-link btn-green">{{settings.ar_home_about_button}}</a>
			</div>








			<div class="item">
				<ul class="tabs">
					{%if settings.ar_abouttab1show%}
					<li class="on" data-tab="{{settings.ar_tabhome_about_title}}">{{settings.ar_tabhome_about_title}}</li>
					{%endif%}
					{%if settings.ar_abouttab2show%}
					<li class="" data-tab="{{settings.ar_tabhome_about_title2}}">{{settings.ar_tabhome_about_title2}}</li>
					{%endif%}
				</ul>
				<div class="tabs-ctn">
					<div class="tabs-item on" data-tab="{{settings.ar_tabhome_about_title}}">
						<div class="box-list">
							{%for i in (1..6)%}
							{%capture anh%}ar_aboutanh1_{{i}}{%endcapture%}
							{%capture link%}ar_aboutanhlink1_{{i}}{%endcapture%}
							{%if settings[anh]%}
							<div class="box">
								<div class="box-ctn">
									<div class="des">
										<a href="{{settings[link]}}">
											<img src="{{settings[anh]}}" alt="">
										</a>
									</div>
								</div>
							</div>
							{%endif%}
							{%endfor%}
						</div>
					</div>



					<div class="tabs-item" data-tab="{{settings.ar_tabhome_about_title2}}">
						<div class="box-list">
							{%for i in (1..6)%}
							{%capture anh%}ar_aboutanh2_{{i}}{%endcapture%}
							{%capture link%}ar_aboutanhlink2_{{i}}{%endcapture%}
							{%if settings[anh]%}
							<div class="box">
								<div class="box-ctn">
									<div class="des">
										<a href="{{settings[link]}}">
											<img src="{{settings[anh]}}" alt="">
										</a>
									</div>
								</div>
							</div>
							{%endif%}
							{%endfor%}
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</section>
{%endif%}