

{%if settings.imgss6show%}
<div class="group group-time">
	<p class="sub-title">{{settings.abtitles6}}</p>
	<h2>{{settings.abtits6}}</h2>
	<div class="time-wrap">
		<span class="line-wrap" style="width: 1146px;">&nbsp;</span>
		<div class="time slider-nav">
			{%for i in (1..12)%}
			{%capture show%}imgss6shownam{{i}}{%endcapture%}
			{%capture anh%}abtitles6titleanh{{i}}{%endcapture%}
			{%capture title%}abtitles6title{{i}}{%endcapture%}
			{%capture noidung%}abtits6noidung{{i}}{%endcapture%}
			{% assign twoprod = forloop.index | modulo: 2 %}
			{%if settings[show]%}
			<div>
				<div class="item {%if twoprod == 0 %}up{%endif%}" style="width: 100%; display: inline-block;">
					<p class="txt">{{settings[title]}}</p>
				</div>
			</div>
			{%endif%}
			{%endfor%}
		</div>
	</div>
	<div class="time-ctn slider-for">

		{%for i in (1..12)%}
		{%capture show%}imgss6shownam{{i}}{%endcapture%}
		{%capture anh%}abtitles6titleanh{{i}}{%endcapture%}
		{%capture title%}abtitles6title{{i}}{%endcapture%}
		{%capture noidung%}abtits6noidung{{i}}{%endcapture%}
		{%if settings[show]%}
		<div class="item">
			<div>
				<div class="list" style="width: 100%; display: inline-block;">
					<div class="item"> <img src="{{settings[anh]}}" alt=""></div>
					<div class="item">
						<div class="heading">
							<p class="txt">{{settings[title]}}</p>
							<div class="ctr"> <a href="#" class="btn btn-slider js-slider-for-prev slick-arrow" aria-disabled="false" style="" tabindex="-1"></a> <a href="#" class="btn btn-slider js-slider-for-next slick-arrow" style="" aria-disabled="false" tabindex="-1"></a></div>
						</div>
						<div class="des"> {{settings[noidung]}}</div>
					</div>
				</div>
			</div>
		</div>
		{%endif%}
		{%endfor%}
	</div>
</div>
{%endif%}





<script>
	$(document).ready(function(){
		$('.time.slider-nav').slick({
			slidesToShow: 7,
			slidesToScroll: 1,
			autoplay: false,
			autoplaySpeed: 6000,
			centerMode: false,
			responsive: [
				{
					breakpoint: 1024,
					settings: {
						slidesToShow: 7,

					}
				},
				{
					breakpoint: 600,
					settings: {
						slidesToShow: 6,

					}
				},
				{
					breakpoint: 480,
					settings: {
						slidesToShow: 4,
						slidesToScroll: 1
					}
				}
			],
			
		});
		$('.time-ctn.slider-for').slick({
			slidesToShow: 1,
			slidesToScroll: 1,
			fade: true,
			cssEase: 'linear',
			autoplay: false,
			autoplaySpeed: 6000,
			dots:true,
			arrows: true,
			prevArrow: $('.js-slider-for-prev'),
			nextArrow: $('.js-slider-for-next'),
		});
	})

	$(document).ready(function(){

		jQuery( '.slider-nav .slick-slide' ).on( 'click', function () {
			jQuery( '.slider-for' ).slick( 'slickGoTo', jQuery( this ).data( 'slickIndex') );
		} );


		
	})

</script>


