{%layout 'ar'%}
<div  class="layout-pageContact">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6 col-sm-12 col-xs-12 box-heading-contact">
				{% if settings.ar_show_google_maps and settings.ar_google_maps_code != blank %}
				<div class="box-map">
					{{ settings.ar_google_maps_code }}
				</div>
				{% endif %}

			</div>
			<div class="col-md-6 col-sm-12 col-xs-12  wrapbox-content-page-contact">
				<div class="header-page-contact clearfix">
					<h1>{{ page.title }}</h1>
				</div>
				<div class="box-info-contact">
					<ul class="list-info">
						<li>
							<p>عنوان</p>
							<p><strong>{{settings.ar_footer_address}}</strong></p>
						</li>
						<li>
							<p>البريد الإلكتروني </p>
							<p><strong>{{settings.ar_footer_email}}</strong></p>
						</li>
						<li>
							<p>رقم الهاتف</p>
							<p><strong>{{settings.ar_footer_phone}}</strong></p>
						</li>
						<li>
							<p>وقت العمل</p>
							<p><strong>{{settings.ar_footer_time}}</strong></p>
						</li>
					</ul>
				</div>
				<div class="box-send-contact">
					<h2>أرسل لنا أسئلة</h2>
					<div id="col-left contactFormWrapper">
						{% form 'contact' %}
						{% if form.posted_successfully? %}
						<div class="alert alert-success">
							Cám ơn bạn đã liên hệ! Chúng tôi sẽ trả lời ngay khi có thể
						</div>
						{% endif %}
						<div class="contact-form">
							<div class="row">
								<div class="col-sm-12 col-xs-12">
									<div class="input-group">
										<input required type="text" name="contact[name]" class="form-control" placeholder="اسمك" aria-describedby="basic-addon1">
									</div>
								</div>
								<div class="col-sm-6 col-xs-12">
									<div class="input-group">
										<input required type="text" name="contact[email]" class="form-control" placeholder="البريد الإلكتروني " aria-describedby="basic-addon1">
									</div>
								</div>
								<div class="col-sm-6 col-xs-12">
									<div class="input-group">
										<input pattern="[0-9]{10,12}" required type="text" name="contact[phone]" class="form-control" placeholder="رقم الهاتف" aria-describedby="basic-addon1">
									</div>
								</div>
								<div class="col-sm-12 col-xs-12">
									<div class="input-group">
										<textarea required name="contact[body]" placeholder="رسالة"></textarea>
										<div class="sitebox-recaptcha" >
											This site is protected by reCAPTCHA and the Google
											<a href="https://policies.google.com/privacy" target="_blank" rel="noreferrer">Privacy Policy</a> 
											and <a href="https://policies.google.com/terms" target="_blank" rel="noreferrer">Terms of Service</a> apply.
										</div>
									</div>
								</div>
								<div class="col-xs-12">
									<button class="button dark">إرسال</button>
								</div>
							</div>
						</div>
						{% endform %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
