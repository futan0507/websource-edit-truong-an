{% layout none %}
<!doctype html>
<html âš¡>
	<head>
		<meta charset="utf-8">
		<title>
			{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
		</title>
		{% if page_description %}
		<meta name="description" content="{{ page_description | strip_html | strip_newlines }}" />
		{% endif %}
		<link rel="canonical" href="{{ canonical_url }}?view=amp" />
		<meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
		<link href="https://fonts.googleapis.com/css?family=Roboto:200,300,400,500,700" rel="stylesheet">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
		<link rel="shortcut icon" href="{{ settings.favicon }}" type="image/png" />
		{% include 'css-amp' %}
		{% include 'js-amp' %}
	</head>
	<body>
		{% include 'header-amp' %}
		<main>
			<div class="bg-breadcrumb">
				{% include 'breadcrumb-amp' %}
			</div>
			<section>
				<div class="main-content-pd">
					<div class="head-title">
						<h1>{{ article.title }}</h1>
					</div>
					<div class="layout-content">
						<div>{{ article.content | replace : '<img', '<amp-img width="600" height="400" layout="responsive"' }}</div>
					</div>
				</div>
			</section>
		</main>
		{% include 'footer-amp' %}
	</body>
</html>

