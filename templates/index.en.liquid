{%layout 'en'%}
<section class="banner hero-banner">
{%include 'banner_en'%}
</section>
{%if settings.en_x1danhmdacbiet%}
<section class="panel panel-categories bg-light-white">
	<div class="inner">
		<div class="list">
			<div class="item item-title">
				<h3>{{settings.en_x1tieudecolldb}}</h3>
				<p>{{settings.en_x1noidungcoldb}}</p>
				<a href="{{settings.en_x1tieudecolldblink}}" id="view-all-products" class="btn btn-link btn-green">{{settings.en_x1tieudennut}}</a>
			</div>
			<div class="item item-list" style="max-height: 320.8px;">
				<ul class="ul-list">
					{%for link in linklists[settings.en_x1tieudecolldblinkmenu].links%}
					<li>
						<a href="{{link.url}}">
							<div class="wrap">
								<div class="img bg" style="background-image: url({{link.object.image.src}})"></div>
							</div>
							<div class="des">
								<p>{{link.title}}</p>
								<span class="icn icn-arr-right">&nbsp;</span>
							</div>
						</a>
					</li>
					{%endfor%}
				</ul>
			</div>
		</div>
		<div class="ctr" style="height: 129.1px; padding-top: 59.1px;"> <a href="#" class="btn-more">Xem thêm chuyên mục</a></div>
	</div>
</section>
{%endif%}
{%include 'section2_en'%}
{%include 'sectionblog_en'%}
{%include 'section3_en'%}
{%include 'aboutus_en'%}
{%include 'iso_en'%}

<script>
	$(document).ready(function(){

		$('.ul-list.owl-carousel').owlCarousel({
			loop:true,
			margin:10,
			nav:true,
			responsive:{
				0:{
					items:1
				},
				600:{
					items:1
				},
				1000:{
					items:4
				}
			}
		})

		if($(".ul-list li").length < 8){
			$(".btn-more").parent().hide();
		}

		$(".btn-more").click(function(e){
			e.preventDefault();
			$(this).parent().hide();
			$(".item.item-list").addClass("noheight");
		})
	})
</script>
<style>
	.panel.panel-categories .item:last-child {
		width: 100%;
	}
	.panel.panel-categories .item .des {
		width: 100%;
		padding: 5px 0;
		z-index: 2;
		position: relative;
	}
	.panel-categories .owl-prev{
		position: absolute;
		background: #fff !important;
		width: 30px;
		top: 40%;
		transform: translateY(-50%);
		left: 0px;

	}
	.panel-categories .owl-next{
		position: absolute;
		background: #fff !important;
		width: 30px;
		top: 40%;
		transform: translateY(-50%);
		right: 0px;

	}
	.panel-categories .owl-prev span,
	.panel-categories .owl-next span{
		font-size: 39px;
	}
	.panel.panel-categories .item .ul-list{
		margin:0
	}
	.panel.panel-categories .item:first-child {
		padding-right: 0;
	}
	.item.item-list{
		position:relative;
	}
	.owlpre{
		position: absolute;
		right: 49px;
		top: -32px;
	}
	.panel.panel-categories .item .des p {
		text-align: center;
		display: block;
		width: 100%;
	}
	@media (max-width:767px){
		.panel.panel-categories .item:last-child {
			width: 100%;
			display: block;
		}
		.panel.panel-categories .item:last-child a{
			display: block;
		}
		.panel.panel-categories .item:last-child .wrap {
			width: 100%;
		}
		.item-inner{
			margin-bottom:20px
		}
		.panel.panel-categories .item:first-child {
			display: block;
		}
	}

</style>

