<script>
if( localStorage.getItem('template') == 'en'){
	var href = location.href;	
	var n = href.includes("?");
	if(n == true){
		var view = '&view=en';
	}else{
		var view = '?view=en';
	}
	window.location=location.href+view;
}
	if( localStorage.getItem('template') == 'ar'){
	var href = location.href;	
	var n = href.includes("?");
	if(n == true){
		var view = '&view=ar';
	}else{
		var view = '?view=ar';
	}
	window.location=location.href+view;
}
