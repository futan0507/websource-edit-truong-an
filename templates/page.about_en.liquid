{%layout 'en'%}

<section class="banner banner-page">
	<div class="img bg" style="background-image: url({{settings.en_imageabout}});"> <span class="overlay">&nbsp;</span></div>
	<div class="des">
		<h1>{{page.title}}</h1>
	</div>
</section>



<section class="panel panel-rich-text">
	<div class="inner">
		<div class="group">
			{{settings.en_noidungabout1}}

			<div class="with-bg">
				<div class="with-bg-wrap">
					<div class="img bg" style="background-image: url({{settings.en_imgss2}})"> <span class="overlay">&nbsp;</span></div>
					<div class="with-bg-ctn">
						<p class="sub-title">{{settings.en_abtitle1}}</p>
						<h2>{{settings.en_abtit2}}</h2>
						<div class="list">
							<div class="item">
								<div class="box box-green">
									<div class="box-ctn">
										<img src="{{settings.en_imgss2box1}}">
									{%assign x = settings.en_abtitle1box1 | split:'||'%}
										<p class="txt">{{x[0]}}</p>
										<div class="des">
											<p>{{x[1]}}</p>
										</div>
									</div>
								</div>
							</div>
							<div class="item">
								<div class="box box-white">
									<div class="box-ctn">
										<img src="{{settings.en_imgss2box2}}">
										{%assign x = settings.en_abtitle1box2 | split:'||'%}
										<p class="txt">{{x[0]}}</p>
										<div class="des">
											<p>{{x[1]}}</p>
										</div>
									</div>
								</div>
							</div>
							<div class="item">
								<div class="box box-black">
									<div class="box-ctn">
										<img src="{{settings.en_imgss2box3}}">
										{%assign x = settings.en_abtitle1box3 | split:'||'%}
										<p class="txt">{{x[0]}}</p>
										<div class="des">
											<p>{{x[1]}}</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="note">
				<p><span style="font-weight: 400;">
					{{settings.en_abtitle1box3noidung}}

					</span></p>
			</div>
		</div>
		{%if settings.en_imgss3show%}
		<div class="group">
			<p class="sub-title">{{settings.en_abtitles3}} </p>
			<h2>{{settings.en_abtits3}}</h2>
			<div class="with-list">
				<div class="list">


					{%for i in (1..4)%}
					{%capture icon%}en_box3icon{{i}}{%endcapture%}
					{%capture title%}en_box3icontitle{{i}}{%endcapture%}
					{%capture content%}en_box3iconcontent{{i}}{%endcapture%}
					<div class="item">
						<div class="box">
							<img src="{{settings[icon]}}" alt="Purpose &amp; Goals">
							<p class="txt">{{settings[title]}}</p>
							<p>{{settings[content]}}</p>
						</div>
					</div>
					{%endfor%}
				</div>
			</div>
		</div>
		{%endif%}

		{%if settings.en_imgss4show%}
		<div class="group group-highlight">
			<p class="sub-title">{{settings.en_abtitles4}}</p>
			<h2>{{settings.en_abtits4}}</h2>
			<div class="des">

				<div>	{{pages[settings.en_abtits4page].content}}</div>
				<a href="{{settings.en_abtits4link}}" data-highlight-element="" class="read-more"><span class="icn icn-left">&nbsp;</span><span class="txt">Xem thÃªm</span> <span class="icn icn-right">&nbsp;</span></a>
			</div>
		</div>
		{%endif%}

		{%if settings.en_imgss5show%}
		<div class="group">
			<p class="sub-title">{{settings.en_abtitles5}}</p>
			<h2>{{settings.en_abtits5}}</h2>
			<div class="map">
				<div class="zoom" style="position: relative; overflow: hidden;">
					<picture>
						<source media="(max-width:767px)" srcset="{{settings.en_abtits5linkmobile}}">
						<source media="(min-width:768px)" srcset="{{settings.en_abtits5link}}">
						<img src="{{settings.en_abtits5link}}" alt="Flowers" style="width:auto;">
					</picture>

				</div>
			</div>
		</div>
		{%endif%}

		{%include 'timeline_en'%}
	</div>
</section>


<style>
	.box-ctn img{
		margin-bottom: 44px;

		max-width:50px;
	}
	
	.with-bg-wrap .box:hover .des{
		display:block !important;
		 margin-top: -35px;
		transition:0.7s ease;
	}
	.with-bg-wrap  .box:hover .txt{
		display:none !important;
	}
</style>.


